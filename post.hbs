{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}


<main role="main">
    <article class="{{post_class}} single-post">
        <header class="post-header short-diver">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                Published at <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>,
                updated at <time class="post-date" datetime="{{date updated_at format='YYYY-MM-DD'}}">{{date updated_at format="DD MMMM YYYY"}}</time>
                <br>
                {{tags prefix=" on "}}
            </section>
        </header>

        <section class="post-content short-diver">
            {{content}}
        </section>

        <footer class="post-footer">

        </footer>

    </article>
</main>

{{> "comment"}}

<aside class="post-readmore">
    <div class="prev">
        {{#prev_post}}
        <a href="{{url}}">
            {{!-- <i aria-hidden="true">←</i> --}}
            <i class="iconfont icon-prev"></i>&nbsp;{{title}}
        </a>
        {{/prev_post}}
    </div>
    <div class="next">
        {{#next_post}}
        <a href="{{url}}">
            {{title}}&nbsp;<i class="iconfont icon-next"></i>
            {{!-- <i aria-hidden="true">→</i> --}}
        </a>
        {{/next_post}}
    </div>
</aside>

{{/post}}


